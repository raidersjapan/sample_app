<%= form_for(@micropost, :html => {:multipart => true}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
     <%= f.file_field :image %>
  </div>
  
      <div class="row">
      <div class="col-md-4">
          <div class="actions">
          <%= f.submit "Post", class: "btn btn-lg btn-primary" %>
          </div>
        </div>
      </div>
<% end %>

