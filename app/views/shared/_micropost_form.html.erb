<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>
  
  <div class="row">    
      <div class="col-md-4">
        <div class="actions">  
          <%= f.submit "Post", class: "btn btn-lg btn-info" %>
        </div>  
      </div>    
  </div>
<% end %>